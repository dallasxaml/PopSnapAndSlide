<Window x:Class="PopSnapAndSlide.Navigation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="6" x:Name="LayoutRoot">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="122"/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<StackPanel>
    		<Button Content="Red" Margin="6" Click="Red_Click"/>
    		<Button Content="Blue" Margin="6" Click="Blue_Click"/>
    	</StackPanel>
    	<Rectangle x:Name="RedControl" Fill="#FFB81313" Grid.Column="1" Margin="6">
    	</Rectangle>
    	<Rectangle x:Name="BlueControl" Fill="#FF1313B8" Grid.Column="1" Margin="6">
    	</Rectangle>
        
    </Grid>
</Window>
